<div class="container">
  <h1> <%= @list.name %> </h1>
  <p> <%= link_to "Back to all lists", lists_path %> </p>
  <p> <%= link_to 'Create new bookmark', new_list_bookmark_path(@list) %> </p>
  <div class="cards">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card-trip">
        <img src=" <%= bookmark.movie.poster_url %> " />
        <div class="card-trip-infos">
          <div>
            <h2> <%= bookmark.movie.title %> </h2>
            <p> <%= bookmark.movie.overview %> </p>
            <p> <strong><%= bookmark.comment %> </strong> </p>
          </div>
          <h2 class="card-trip-pricing"> <%= bookmark.movie.rating %> </h2>
          <p> <%= link_to "Delete",
      bookmark_path(bookmark),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
     %> </p>
        </div>
      </div>
    <% end %>
  </div>
</div>
