<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://www.auditoria-services.com/wp-content/uploads/2016/11/The-Ultimate-1-1000x563.jpg);">
  <div class="container">
    <h1>All your favorite movies</h1>
  </div>
  <div>
    <% if user_signed_in? %>
  <%= link_to('Logout', destroy_user_session_path, method: :delete) %>
<% else %>
  <%= link_to('Login', new_user_session_path) %> |
  <%= link_to('Register', new_user_registration_path) %>
<% endif %>
  </div>
</div>
<div class="container">
  <h1>All Movie Lists</h1>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url( <%= list.photo.attached? ? cl_image_path(list.photo.key) : "https://upload.wikimedia.org/wikipedia/commons/thumb/4/49/A_black_image.jpg/640px-A_black_image.jpg" %> )">
        <%= link_to "#{list.name}", list_path(list), class: "nav-link" %>
      </div>
    <% end %>
  </div>
  <%= link_to 'Create a new movie list', new_list_path %>
</div>
